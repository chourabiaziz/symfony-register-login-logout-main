{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>
<a style="color: red;" href="/logout"> <b>LOGOUT</b> </a>
<div class="example-wrapper">


    {% if app.user %}

    <h1>Welcome {{app.user.username}} </h1>


    <h3>List of users</h3>
    <table border 1>
        <thead>
            <th>#</th>
            <th>Username</th>
            <th>Age</th>
            <th>Sexe</th>
            <th>Role</th>
            <th>Actions</th>
        </thead>
    </table>













    {% else %}
    <h1>You are not conncted , try to connect from <a href="/login">here</a> </h1>
    {% endif %}



</div>
{% endblock %}